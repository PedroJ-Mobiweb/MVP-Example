<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign_in.SignInActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/signIn_et_email" android:layout_margin="8dp" android:hint="Email"
                android:text="pedro.pocas@mobiweb.pt"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/signIn_et_password" android:layout_margin="8dp" android:hint="Password"
                android:text="1234qwer"/>
        <Button
                android:text="sign in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/signIn_btn_signIn"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>